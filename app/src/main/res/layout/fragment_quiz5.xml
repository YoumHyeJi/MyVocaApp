<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz.Quiz5Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quiz5_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quiz5_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/quiz5_favadd_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/btnstyle"
                android:textOff="@null"
                android:textOn="@null"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/quiz5_speaker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="#FDF4F4"
            android:backgroundTint="#ECE7E7"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_speaker_24" />

        <TextView
            android:id="@+id/quiz5_answer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="invisible" />


        <Button
            android:id="@+id/quiz5_pass_btn"
            android:layout_width="105dp"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="#F49CBA"
            android:text="PASS>>" />


        <Button
            android:id="@+id/quiz5_answer1_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0C0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quiz5_answer2_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0C0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quiz5_answer3_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFFFF"
            android:text="Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#0C0000"
            android:textSize="25sp"
            android:textStyle="bold" />



    </LinearLayout>


</FrameLayout>